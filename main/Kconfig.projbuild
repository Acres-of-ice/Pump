menu "Pump Controller Configuration"

    choice INTERNET_MODE
        prompt "Internet Connection Mode"
        default INTERNET_SIM
        help
            Select the primary network connectivity method.

        config INTERNET_WIFI
            bool "WiFi"
            help
                Use WiFi for network connectivity.

        config INTERNET_SIM
            bool "SIM/Cellular (4G LTE)"
            help
                Use SIM7600 cellular modem for network connectivity.
    endchoice

    menu "WiFi Configuration"
        depends on INTERNET_WIFI

        config WIFI_SSID
            string "WiFi SSID"
            default "YourSSID"
            help
                SSID (network name) to connect to.

        config WIFI_PASSWORD
            string "WiFi Password"
            default "YourPassword"
            help
                WiFi password (WPA or WPA2) to connect to.

    endmenu

    config DEVICE_ID
        string "Device ID"
        default "Shey"
        help
            Unique identifier for this device.
            Used in MQTT topics: mg_mqtt_dashboard/{DEVICE_ID}/rx

choice PUMP_TYPE
    prompt "Pump Type"
    default PUMP_BOREWELL
    help
        Select the type of pump depending on the site.

    config PUMP_BOREWELL
        bool "Borewell"
        
    config PUMP_1HP
        bool "1 HP"
endchoice

    config MQTT_BROKER_URL
        string "MQTT Broker URL"
        default "mqtt://aoi:4201@44.194.157.172:1883"
        help
            MQTT broker URL. Examples:
            - mqtt://broker.hivemq.com:1883 (public, unsecured)
            - mqtt://user:pass@broker:1883 (with authentication)
            - mqtts://your-broker.com:8883 (TLS secured)

endmenu

menu "Camera Configuration"

    config ENABLE_CAMERA
        bool "Enable Camera Support"
        default n
        help
            Enable camera hardware and MQTT camera commands.
            Camera will subscribe to simcam/{sitename}/do for commands.
        
    choice FRAMESIZE
        depends on ENABLE_CAMERA
		bool "Camera Frame Size"
		default FRAMESIZE_QSXGA
		help
			Select picture frame size for camera captures.

		config FRAMESIZE_240X240
			bool "240x240"
		config FRAMESIZE_QVGA
			bool "320x240 (QVGA)"
		config FRAMESIZE_HVGA
			bool "480x320 (HVGA)"
		config FRAMESIZE_VGA
			bool "640x480 (VGA)"
		config FRAMESIZE_SVGA
			bool "800x600 (SVGA)"
		config FRAMESIZE_XGA
			bool "1024x768 (XGA)"
		config FRAMESIZE_HD
			bool "1280x720 (HD)"
		config FRAMESIZE_SXGA
			bool "1280x1024 (SXGA)"
		config FRAMESIZE_UXGA
			bool "1600x1200 (UXGA)"
		config FRAMESIZE_QXGA
			bool "2048x1536 (QXGA)"
		config FRAMESIZE_QSXGA
			bool "2560x1920 (QSXGA)"
		config FRAMESIZE_5MP
			bool "2592x1944 (5MP)"
	endchoice
            
    config PCB_TYPE_OCT
        depends on ENABLE_CAMERA
        bool "Use OCT (Octal SPIRAM) PCB"
        default y
        help
            Enable for OCT (Octal SPIRAM) PCB variant.
            OCT mode uses GPIO 33-37 for SPIRAM, requiring alternative camera pins.

endmenu
